<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>AccessFilter</filter-name>
        <filter-class>filter.AccessFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AccessFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>controller.UserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TFPC</servlet-name>
        <servlet-class>controller.TuitionFeeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfileController</servlet-name>
        <servlet-class>controller.ProfileController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateProfileController</servlet-name>
        <servlet-class>controller.UpdateProfileController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MarkReportController</servlet-name>
        <servlet-class>controller.MarkReportController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TFPCadmin</servlet-name>
        <servlet-class>controller.TuitionFeeAdminController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListUserController</servlet-name>
        <servlet-class>controller.ListUserAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ScheduleController</servlet-name>
        <servlet-class>controller.ScheduleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ApplicationController</servlet-name>
        <servlet-class>controller.ApplicationStudentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ApplicationViewAdmin</servlet-name>
        <servlet-class>controller.ApplicationViewAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Response</servlet-name>
        <servlet-class>controller.ResponseApplication</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AttendReportController</servlet-name>
        <servlet-class>controller.AttendReportController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionC</servlet-name>
        <servlet-class>controller.QuestionController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TFPC</servlet-name>
        <url-pattern>/TFPC</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfileController</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateProfileController</servlet-name>
        <url-pattern>/updateprof</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MarkReportController</servlet-name>
        <url-pattern>/mark</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TFPCadmin</servlet-name>
        <url-pattern>/TFPCadmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListUserController</servlet-name>
        <url-pattern>/listuser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ScheduleController</servlet-name>
        <url-pattern>/schedule</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ApplicationController</servlet-name>
        <url-pattern>/appst</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ApplicationViewAdmin</servlet-name>
        <url-pattern>/appvad</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Response</servlet-name>
        <url-pattern>/response</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AttendReportController</servlet-name>
        <url-pattern>/attendR</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionC</servlet-name>
        <url-pattern>/question</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
